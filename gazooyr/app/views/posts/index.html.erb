<div class="container">
  <div class="row justify-content-around">
    <h3>Posts :</h3>
    <br>
    <% @posts.each do |post| %>
    <div class="col-md-5 text-center col-md-offset-1 well">
          <h1><%= post.title %></h1>
          <p><%= post.content %></p>
    </div>
    <% end %>
  </div>
</div>
